<%- include ('layouts/cart_header') -%>
<% if(isEmpty == 1){%>
<h1 style="margin: 10rem; text-align: center;">Your cart is empty</h1>

<%}else{%>
<div class="container pb-5 mb-2 mycart" style="margin-top: 10rem;">
    <!-- Cart Item-->
    <% let total = 0; %>
    <% cart.forEach(function(food){%>
    <div class="cart-item d-md-flex justify-content-between">
        <span class="remove-item"><a href="/cart/update/<%= food.id %>/?action=clear"><i
                    class="fa fa-times"></i></a></span>
        <div class="px-3 my-3">
            <a class="cart-item-product" href="/menu/<%= food.id %>">
                <div class="cart-item-product-thumb"><img src="<%= food.image%>" alt="Product"></div>
                <div class="cart-item-product-info">
                    <h4 class="cart-item-product-title"><%= food.name %></h4>
                    <span><strong>Type:</strong><%= food.category %></span>
                    <!-- <span><strong>Color:</strong> Black</span> -->
                </div>
            </a>
        </div>
        <div class="px-3 my-3 text-center">
            <div class="cart-item-label">Quantity</div>
            <span class="text-xl font-weight-medium"><%= food.qty %></span>
        </div>
        <div class="px-3 my-3 text-center">
            <div class="cart-item-label">Edit</div>
            <span class="text-xl font-weight-medium">
                <a href="/cart/update/<%= food.id %>/?action=add">+</a>
                <a href="/cart/update/<%= food.id %>/?action=remove">-</a>
            </span>
        </div>
        <div class="px-3 my-3 text-center">
            <div class="cart-item-label">Subtotal</div>
            <% total = total + food.qty*food.price; %>
            <span class="text-xl font-weight-medium"><%= food.price %> VND</span>
        </div>

    </div>
    <%}) %>

    <!-- Coupon + Subtotal-->
    <div class="d-sm-flex justify-content-between align-items-center text-center text-sm-left">
        <div class="py-2"><span
                class="d-inline-block align-middle text-sm text-muted font-weight-medium text-uppercase mr-2">Total:</span><span
                class="d-inline-block align-middle text-xl font-weight-medium"> <%= total %> VND</span></div>
    </div>
    <!-- Alert-->
    <div class="alert alert-info alert-dismissible fade show text-center mb-30"><span class="alert-close"
            data-dismiss="alert"></span><i class="fe-icon-award"></i>&nbsp;&nbsp;With this purchase you will earn
        <strong><%= total/1000 %> </strong> Reward Points.
    </div>
    <!-- Buttons-->
    <hr class="my-2">
    <div class="d-grid gap-2">
        <a href="/cart/clear" class="btn btn-primary btnFilter"><i class="fe-icon-refresh-ccw"></i>&nbspXóa giỏ hàng</a>
        <% if(user == undefined){%>
        <a href="/login" class="btn btn-primary btnFilter"><i class="fe-icon-credit-card"></i>&nbsp;Đăng nhập để thanh
            toán</a>
        <%}else{%>
        <a href="/pay" class="btn btn-primary btnFilter"><i class="fe-icon-credit-card"></i>&nbsp;Thanh toán</a>
        <%} %>

    </div>

</div>

<%}%>

<%- include ('layouts/footer') -%>