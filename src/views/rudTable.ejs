<%- include ('layouts/header') -%>

<!-- table section starts  -->
<section style="margin-top: 4.5em;" class="order" id="order">

    <h3 class="sub-heading"> Đặt bàn ngay </h3>
    <a href="/table" class="link-primary" style="font-size: 17px;">Đặt một bàn mới</a>
    <br/>
    
    <% if (status == 'search') { %>
        <% if (reserveInfors.length > 0) { %>
            <form class= "needs-validation" novalidate >
                <% if (alert) { %>
                    <div class="alert alert-success alert-dismissible fade show" role="alert">
                        <%= alert %> 
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                <% } %> 
                <h3>Tên của bạn: <b><%= user.fname %> <%= user.lname %></b></h3>
                <h3>Số điện thoại: <b> <%= user.phone %> </b></h3>
                <h3>Email: <b> <%= user.email %> </b></h3>
                <h3>Số bàn đã đặt: <b> <%= reserveInfors.length %> </b></h3>
                <br/>
                <a class="btn btn-primary" href="/table/deleteAll" role="button">Hủy tất cả bàn</a>
            </form>
            <br/>
            <% var table_count = 1 %> 
            <% reserveInfors.forEach(function(reserveInfor) { %>
                <form class= "needs-validation" method="POST" action="/table/update/<%= reserveInfor.id %>" novalidate >
                    <h2>Bàn số <%= table_count %> </h2>
                    <% table_count += 1 %> 
                    <h4>Trạng thái: <b><%= reserveInfor.status %></b></h4>
                    <i class="fas fa-reply"></i>
                    <h4>Phản hồi: <b><%= reserveInfor.managerResponse %></b> </h4>
                    <div class="inputBox">
                        <div class="input">
                            <i class="fas fa-user-friends"></i>
                            <span>Số người</span>
                            <select id="inputState" class="form-select" style="height: 50%;" name="numberPeople">
                                <% for ( var i = 1; i <= 6; i++ ) {
                                    var selected = ( reserveInfor.numberPeople == i ) ? "selected" : "";
                                    %><option <%=selected %>><%=i%></option><%
                                } %>
                            </select>
                        </div>
                        <div class="input">
                            <i class="fas fa-clock"></i>
                            <span>Ngày và giờ</span>
                            <input type="datetime-local" name="time" value="<%= convertTime(reserveInfor.time) %>">
                        </div>
                    </div>
                    <div class="inputBox">
                        <div class="input">
                            <i class="fas fa-comment-dots"></i>
                            <span>Yêu cầu của bạn</span>
                            <textarea id="" style="height: 50px" name="message" ><%= reserveInfor.message %></textarea>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-2"><input type="submit" value="Cập nhật" class="btn"></div>
                        <div class="col-6">
                            <a class="btn btn-primary" href="/table/delete/<%= reserveInfors[0].id %>/<%= reserveInfors[0].customerPhone %>" role="button">Hủy bàn này</a>
                        </div>
                    </div>
                </form>
                <br/>
            <% }); %>
        <% } else { %>
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                Bạn chưa đặt bàn nào cả !!!
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
             </div>
        <% } %>
    <% } %>

   
</section>

<!-- order section ends -->
<%- include ('layouts/footer') -%>