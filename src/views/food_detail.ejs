<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <!-- Add bootstrap for category -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">

    <link rel="stylesheet" href="https://unpkg.com/swiper/swiper-bundle.min.css" />

    <!-- font awesome cdn link  -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">

    <!-- custom css file link  -->
    <link rel="stylesheet" href="/css/style.css">
    <style>
        a {
            text-decoration: none;
        }
    </style>

</head>

<body>

    <!-- header section starts      -->

    <header>

        <a href="/" class="logo"><i class="fas fa-utensils"></i>Shiba.</a>

        <nav class="navbar">
            <a href="/">home</a>
            <a class="active" href="/menu">menu</a>
            <a href="/about">about</a>
            <a href="/order">order</a>
            <a href="/table">table</a>
        </nav>

        <div class="icons">
            <i class="fas fa-bars" id="menu-bars"></i>
            <i class="fas fa-search" id="search-icon"></i>
            <a href="/#dishes" class="fas fa-heart"></a>
            <a href="/cart" class="fas fa-shopping-cart"></a>
        </div>

    </header>

    <!-- header section ends-->

    <!-- search form  -->

    <form action="/menu/search" method="post" id="search-form">
        <input type="search" placeholder="search here..." name="search" id="search-box">
        <label for="search-box" class="fas fa-search"
            onclick="document.getElementById('search-form').submit();"></label>
        <i class="fas fa-times" id="close"></i>
    </form>

<!-- menu section starts  -->


<!-- order section starts  -->

<section style="margin-top: 4.5em;" class="about" id="">

    <h3 class="sub-heading"> Our Food </h3>
    <h1 class="heading"> is the best </h1>

    <div class="row">

        <div class="image">
            <img src="https://raw.githubusercontent.com/PhucNguyen1905/RestaurantPOS/main/images/<%= dish.image %>"
                alt="">
        </div>

        <div class="content">
            <h3><%= dish.name %> </h3>
            <!-- <p><%= dish.brief %></p> -->
            <p><%= dish.description %></p>
            <div class="icons-container">
                <div class="icons">
                    <i class="fas fa-utensils"></i>
                    <span><%=category %></span>
                </div>
                <div class="icons">
                    <i class="fas fa-wallet"></i>
                    <span>  <%= dish.price/1000 %> .000 VND</span>
                </div>
                <div class="icons">
                    <i class="fas fa-star"></i>
                    <span>4,5</span>
                </div>
            </div>
            <section style="background-color: white; padding: 0" class="order" id="order">
            <form action="/cart/add/<%= dish.id %>" method="POST">
                <input id="id" type="number" name="id" value="<%=dish.id%>"  min="1" placeholder="Food quantity" hidden="true">
                <div class="inputBox">
                    <div class="input">
                        <span for="qty">Select Quantity: </span>
                        <input id="qty" type="number" name="quantity" min="1" placeholder="Food quantity" required>
                    </div>
                    <div class="input">
                        <span for="qty">Note: </span>
                        <input type="textarea" placeholder="Please note here!" name="note">
                    </div>
                </div>
                <button type="submit" class="btn">Add to cart</button>
            </form>
            </section>
            <a style="margin-left: 1.5rem" href="/menu" class="btn">Menu</a>
        </div>
        
    </div>

</section>


<!-- order section ends -->
<%- include ('layouts/footer') -%>