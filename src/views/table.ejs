<%- include ('layouts/header') -%>

<!-- table section starts  -->
<section style="margin-top: 4.5em;" class="order" id="order">

    <h3 class="sub-heading"> Đặt bàn ngay </h3>
    <a href="/table/reserved" class="link-primary" style="font-size: 17px;">Xem bàn đã đặt</a>
    
    <form class= "needs-validation" method="POST" action="/table" novalidate>
        <% if (alert) { %>
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                <%= alert %> 
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
             </div>
        <% } %> 
        <div class="inputBox">
            <div class="input">
                <span><i class="fas fa-user-friends"></i>&ensp; Chọn số người</span>
                <% if (status == 'extra') { %>
                    <select id="inputState" class="form-select" style="height: 50%;" name="numberPeople">
                        <% for ( var i = 1; i <= 6; i++ ) {
                            var selected = ( reserveInfor.numberPeople == i ) ? "selected" : "";
                            %><option <%=selected %>><%=i%></option><%
                        } %>
                    </select>
                <% } else { %>
                    <select id="inputState" class="form-select" style="height: 50%;" name="numberPeople">
                        <option selected >1</option>
                        <% for ( var i = 2; i <= 6; i++ ) {
                            %><option ><%=i%></option><%
                        } %>
                    </select>
                <%}%>
            </div>
            <div class="input">
                <span><i class="fas fa-clock"></i>&ensp; Ngày và giờ</span>
                <% if (status == 'extra') { %>
                    <input type="datetime-local" value="<%= convertTime(reserveInfor.time) %>" name="time" >
                <% } else { %>
                    <input type="datetime-local" name="time">
                <%}%>
            </div>
        </div>
        <div class="inputBox">
            <div class="input">
                <span><i class="fas fa-comment-dots"></i>&ensp; Note</span>
                <% if (status == 'extra') { %>
                    <textarea id="" style="height: 50px" name="message" ><%= reserveInfor.message %></textarea>
                <% } else { %>
                    <textarea placeholder="thêm note" id="" style="height: 50px" name="message" ></textarea>
                <%}%>
            </div>
        </div>
        <% if (status == 'extra') { %>
            <input type="submit" value="Đặt tiếp" class="btn">
        <% } else { %>
            <input type="submit" value="Đặt" class="btn">
        <%}%>
    </form>
</section>

<!-- reserve section ends -->

<%- include ('layouts/footer') -%>