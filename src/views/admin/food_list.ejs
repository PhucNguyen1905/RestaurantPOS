<%- include ('../layouts/admin_header') -%>
<div id="layoutSidenav_content">
    <main>
        <div class="container-fluid px-4">
            <div class="alert alert-success alert-dismissible fade show mt-4" <%= hidden %> role="alert">
                <strong>Success!</strong> <%= messages %>.
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
            <h1 class="mt-4">All foods</h1>
            <ol class="breadcrumb mb-4">
                <li class="breadcrumb-item"><a href="/admin">Dashboard</a></li>
                <li class="breadcrumb-item active">List of Food</li>
            </ol>

            <div class="card mb-4">
                <div class="card-header">
                    <i class="fas fa-table"></i>
                    <a class="btn btn-success" href="/admin/food/add-food">Add new food</a>
                </div>
                <div class="card-body">
                    <table id="datatablesSimple">
                        <thead>
                            <tr>
                                <th>Image</th>
                                <th>Name</th>
                                <th>Price</th>
                                <th>Category</th>
                                <th>Brief</th>
                                <th>Description</th>
                                <th style="text-align: center;">Action</th>
                                <th style="text-align: center;">Status</th>
                            </tr>
                        </thead>
                        <tfoot>
                            <tr>
                                <th>Image</th>
                                <th>Name</th>
                                <th>Price</th>
                                <th>Category</th>
                                <th>Brief</th>
                                <th>Description</th>
                                <th style="text-align: center;">Action</th>
                                <th style="text-align: center;">Status</th>
                            </tr>
                        </tfoot>
                        <tbody>
                            <% foods.forEach(function(food){%>
                            <tr>
                                <td>
                                    <img src="https://raw.githubusercontent.com/PhucNguyen1905/RestaurantPOS/main/images/<%= food.image %>"
                                        style="height: 5rem; width: 6rem;" alt="">
                                </td>
                                <td><%= food.name %> </td>
                                <td><%= food.price %> </td>
                                <td><%= food.categories %> </td>
                                <td><%= food.brief %> </td>
                                <td><%= food.description %> </td>
                                <td style="text-align: center;">
                                    <a class=" link-info" style="text-decoration: none;"
                                        href="/admin/food/edit-food/<%=food.id%>">
                                        <i class="fas fa-edit"></i>
                                        Edit
                                    </a>
                                    -
                                    <a class="link-danger" style="text-decoration: none;" data-bs-toggle="modal"
                                        data-bs-target="#deleteModal<%= food.id %>">
                                        <i class="fas fa-trash-alt"></i>
                                        Delete
                                    </a>
                                    <!-- Modal -->
                                    <div class="modal fade" id="deleteModal<%= food.id %>" tabindex="-1"
                                        aria-labelledby="deleteModalLabel" aria-hidden="true">
                                        <div class="modal-dialog">
                                            <div class="modal-content">
                                                <div class="modal-header">
                                                    <h5 class="modal-title" id="deleteModalLabel">Delete Food</h5>
                                                    <button type="button" class="btn-close" data-bs-dismiss="modal"
                                                        aria-label="Close"></button>
                                                </div>
                                                <div class="modal-body">
                                                    Do you really want to delete <%=food.name%>?
                                                </div>
                                                <div class="modal-footer">
                                                    <button type="button" class="btn btn-secondary"
                                                        data-bs-dismiss="modal">Close</button>
                                                    <button type="submit" class="btn btn-primary">
                                                        <a style="text-decoration: none; color: white;"
                                                            href="/admin/food/delete-food/<%=food.id%>">Delete</a>
                                                    </button>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </td>
                                <td style="text-align: center;">
                                    <% if(food.status == 'off'){%>
                                    <a class=" link-info" style="text-decoration: none; font-size: 2rem;"
                                        href="/admin/food/status-on/<%=food.id%>">
                                        <i class="fas fa-eye-slash"></i>
                                    </a>
                                    <%}else{%>
                                    <a class="link-danger"
                                        style="text-decoration: none; font-size: 2rem; color: #5C7AEA;"
                                        data-bs-toggle="modal" data-bs-target="#statusModal<%= food.id %>">
                                        <i class="fas fa-eye"></i>
                                    </a>
                                    <!-- Modal -->
                                    <div class="modal fade" id="statusModal<%= food.id %>" tabindex="-1"
                                        aria-labelledby="statusModalLabel" aria-hidden="true">
                                        <div class="modal-dialog">
                                            <div class="modal-content">
                                                <div class="modal-header">
                                                    <h5 class="modal-title" id="statusModalLabel">Hide Food</h5>
                                                    <button type="button" class="btn-close" data-bs-dismiss="modal"
                                                        aria-label="Close"></button>
                                                </div>
                                                <div class="modal-body">
                                                    Do you really want to hide <%=food.name%> from Menu?
                                                </div>
                                                <div class="modal-footer">
                                                    <button type="button" class="btn btn-secondary"
                                                        data-bs-dismiss="modal">Close</button>
                                                    <button type="submit" class="btn btn-primary">
                                                        <a style="text-decoration: none; color: white;"
                                                            href="/admin/food/status-off/<%=food.id%>">Hide</a>
                                                    </button>
                                                </div>
                                            </div>
                                        </div>
                                    </div>

                                    <%} %>

                                </td>
                            </tr>

                            <%}) %>


                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </main>
    <%- include ('../layouts/admin_footer') -%>